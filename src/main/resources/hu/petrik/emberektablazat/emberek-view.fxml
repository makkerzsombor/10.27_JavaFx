<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.emberektablazat.emberekController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="nevMezo" promptText="Név" />
            <Spinner />
            <Button mnemonicParsing="false" onAction="#hozzaadClick" text="Hozzáad" />
         </children>
      </HBox>
      <TableView fx:id="emberek" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="nevOszlop" minWidth="50.0" prefWidth="200.0" text="Név" />
            <TableColumn fx:id="korOszlop" minWidth="50.0" prefWidth="50.0" text="kor" />
        </columns>
      </TableView>
   </children>
</VBox>
